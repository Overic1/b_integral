{% extends "base.html.twig" %}

{% block title %}B-integral{% endblock %}

{% block body %}

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand" href="#">Navbar</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    {% if app.user %}
        <ul class="navbar-nav mr-auto">
           <li class="nav-item active">
                <a class="nav-link" href="{{ path('security.logout') }}">Se deconnecter</span></a>
            </li> 
        </ul>
    {% endif %}
    
  </div>
</nav>

<div class="container">
    <div class="jumbotron mt-4">
        <h1 class="display-4">Page temporaire</h1>
        <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
        <hr class="my-4">
        <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
        {% if app.user %}
            {% if isAdmin %}
                <a class="btn btn-primary btn-lg" href="{{ path('admin') }}" role="button">Interface administrateur</a>    
            {% else %}
                <a class="btn btn-primary btn-lg" href="{{ path('index') }}" role="button">Voir le Dashbord</a>    
            {% endif %}
        {% else %}
            <a class="btn btn-primary btn-lg" href="{{ path('security.login') }}" role="button">Se connecter</a>
        {% endif %}        
    </div>
</div>

{% endblock %}
